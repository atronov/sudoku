{
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
  },
  "include": [
    "src"
  ]
}
